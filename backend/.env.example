# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000","https://your-frontend-domain.com"]

# Directory Settings
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
OUTPUT_DIR=./outputs
MODELS_DIR=./models

# File Settings
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
FILE_RETENTION_HOURS=24
CLEANUP_AFTER_PROCESSING=True

# Processing Settings
MAX_CONCURRENT_JOBS=3

# Demucs Settings
DEMUCS_MODEL=htdemucs
DEMUCS_DEVICE=cuda  # Use 'cpu' if no GPU available
DEMUCS_SHIFTS=1
DEMUCS_OVERLAP=0.25

# Omnizart Settings
OMNIZART_DEVICE=cuda  # Use 'cpu' if no GPU available
OMNIZART_MODEL_PATH=  # Leave empty to use default checkpoints

# Sheet Music Settings
SHEET_MUSIC_FORMAT=pdf
SHEET_MUSIC_DPI=300

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=./logs/drumscore.log

# Optional: MuseScore path for better PDF rendering
# MUSESCORE_PATH=C:\Program Files\MuseScore 3\bin\MuseScore3.exe
